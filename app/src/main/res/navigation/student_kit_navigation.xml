<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_modules">

    <fragment
        android:id="@+id/navigation_bursary"
        android:name="zw.co.guava.studentkit.ui.main.bursary.BursaryFragment"
        android:label="@string/bursary"
        tools:layout="@layout/fragment_bursary">
        <action
            android:id="@+id/action_navigation_bursary_to_profileActivity"
            app:destination="@id/profileActivity" />
        <action
            android:id="@+id/action_navigation_bursary_to_internalTransferFragment"
            app:destination="@id/internalTransferFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_modules"
        android:name="zw.co.guava.studentkit.ui.main.modules.ModulesFragment"
        android:label="@string/modules"
        tools:layout="@layout/fragment_modules">
        <action
            android:id="@+id/action_navigation_modules_to_profileActivity"
            app:destination="@id/profileActivity" />
        <action
            android:id="@+id/action_navigation_modules_to_courseView"
            app:destination="@id/courseView" />
        <action
            android:id="@+id/action_navigation_modules_to_timetableFragment"
            app:destination="@id/timetableFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="zw.co.guava.studentkit.ui.main.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications">
        <action
            android:id="@+id/action_navigation_notifications_to_profileActivity"
            app:destination="@id/profileActivity" />
    </fragment>

    <fragment
        android:id="@+id/navigation_transport"
        android:name="zw.co.guava.studentkit.ui.main.transport.TransportFragment"
        android:label="@string/transport"
        tools:layout="@layout/fragment_transport">
        <action
            android:id="@+id/action_navigation_transport_to_profileActivity"
            app:destination="@id/profileActivity" />
    </fragment>

    <activity
        android:id="@+id/profileActivity"
        android:name="zw.co.guava.studentkit.ui.preferences.ProfileActivity"
        android:label="activity_profile"
        tools:layout="@layout/activity_profile" />
    <fragment
        android:id="@+id/courseView"
        android:name="zw.co.guava.studentkit.ui.main.modules.CourseView"
        android:label="Course"
        tools:layout="@layout/fragment_course_view" >
        <action
            android:id="@+id/action_courseView_to_navigation_modules"
            app:destination="@id/navigation_modules" />
        <action
            android:id="@+id/action_courseView_to_courseMaterialFragment"
            app:destination="@id/courseMaterialFragment" />
        <action
            android:id="@+id/action_courseView_to_assignmentsFragment"
            app:destination="@id/assignmentsFragment" />
    </fragment>
    <fragment
        android:id="@+id/assignmentViewFragment"
        android:name="zw.co.guava.studentkit.ui.main.modules.AssignmentViewFragment"
        android:label="AssignmentViewFragment" />
    <fragment
        android:id="@+id/assignmentsFragment"
        android:name="zw.co.guava.studentkit.ui.main.modules.AssignmentsFragment"
        android:label="AssignmentsFragment" >
        <action
            android:id="@+id/action_assignmentsFragment_to_assignmentViewFragment"
            app:destination="@id/assignmentViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/courseMaterialFragment"
        android:name="zw.co.guava.studentkit.ui.main.modules.CourseMaterialFragment"
        android:label="CourseMaterialFragment" />
    <fragment
        android:id="@+id/timetableFragment"
        android:name="zw.co.guava.studentkit.ui.main.modules.TimetableFragment"
        android:label="TimetableFragment" />
    <fragment
        android:id="@+id/internalTransferFragment"
        android:name="zw.co.guava.studentkit.ui.main.bursary.InternalTransferFragment"
        android:label="InternalTransferFragment" >
        <action
            android:id="@+id/action_internalTransferFragment_to_navigation_bursary"
            app:destination="@id/navigation_bursary" />
        <action
            android:id="@+id/action_internalTransferFragment_to_navigation_bursary2"
            app:destination="@id/navigation_bursary" />
    </fragment>
    <fragment
        android:id="@+id/transferSuccessFragment"
        android:name="zw.co.guava.studentkit.ui.main.bursary.TransferSuccessFragment"
        android:label="TransferSuccessFragment" >
        <action
            android:id="@+id/action_transferSuccessFragment_to_navigation_bursary"
            app:destination="@id/navigation_bursary" />
    </fragment>
    <fragment
        android:id="@+id/verifyTransactionFragment"
        android:name="zw.co.guava.studentkit.ui.main.bursary.VerifyTransactionFragment"
        android:label="VerifyTransactionFragment" >
        <action
            android:id="@+id/action_verifyTransactionFragment_to_navigation_bursary"
            app:destination="@id/navigation_bursary" />
        <action
            android:id="@+id/action_verifyTransactionFragment_to_internalTransferFragment"
            app:destination="@id/internalTransferFragment" />
        <action
            android:id="@+id/action_verifyTransactionFragment_to_transferSuccessFragment"
            app:destination="@id/transferSuccessFragment" />
    </fragment>
</navigation>